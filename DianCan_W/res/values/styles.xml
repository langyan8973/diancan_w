<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Widget" parent="@android:style/Widget"/>
    <style name="Widget.Image" parent="@style/Widget">
        <item name="android:scaleType">fitXY</item>
        <item name="android:contentDescription"> </item>
    </style>
    <style name="Widget.Image.TabImage" parent="@style/Widget.Image">
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="Widget.Image.OrderItemStatus" parent="@style/Widget.Image">
        <item name="android:src">@drawable/duihao</item>
    </style>
    <style name="Widget.Image.SearchClear" parent="@style/Widget.Image">
        <item name="android:src">@drawable/stop</item>
    </style>
    <style name="Widget.Image.DisplayControl" parent="@style/Widget.Image">
        <item name="android:src">@drawable/list</item>
    </style>
    <style name="Widget.TextView" parent="@style/Widget"/>
    <style name="Widget.TextView.OrderTitle" parent="@style/Widget.TextView">
	    <item name="android:textColor">@color/white</item>
	</style>
	<style name="Widget.TextView.OrderSumText" parent="@style/Widget.TextView.OrderTitle">
	    <item name="android:textSize">16sp</item>
	    <item name="android:gravity">center</item>
	</style>
    <style name="Widget.TextView.OrderItemTitle" parent="@style/Widget.TextView">
	    <item name="android:textColor">@color/OrderItemTitleColor</item>
	    <item name="android:textSize">16sp</item>
	</style>
	<style name="Widget.TextView.OrderItemPrice" parent="@style/Widget.TextView">
	    <item name="android:textColor">@color/gray</item>
	    <item name="android:textSize">15sp</item>
	</style>
	<style name="Widget.TextView.GridItemTitle" parent="@style/Widget.TextView.OrderItemPrice">
	    <item name="android:textColor">@color/gray</item>
	    <item name="android:textSize">15sp</item>
	</style>
	<style name="Widget.TextView.OrderItemCount" parent="@style/Widget.TextView">
	    <item name="android:textColor">@color/red</item>
	    <item name="android:textSize">20sp</item>
	    <item name="android:gravity">center</item>
	</style>
	<style name="Widget.TextView.DeskTitle" parent="@style/Widget.TextView.OrderItemCount">
	    <item name="android:textColor">@color/desktitle</item>
	</style>
	<style name="Widget.TextView.CategoryText" parent="@style/Widget.TextView">
	    <item name="android:textColor">@color/white</item>
	    <item name="android:gravity">center</item>
	    <item name="android:text">@string/CategoryDefault</item>
	</style>
	<style name="Widget.TextView.TabCountText" parent="@style/Widget.TextView">
	    <item name="android:textColor">@color/white</item>
	    <item name="android:gravity">center</item>
	    <item name="android:background">@drawable/txtborder</item>
	    <item name="android:textSize">10sp</item>
	    <item name="android:visibility">invisible</item>
	</style>
	<style name="Widget.TextView.TabTitleText" parent="@style/Widget.TextView">
	    <item name="android:textColor">@drawable/tab_text_color</item>
	    <item name="android:gravity">center</item>
	    <item name="android:singleLine">true</item>
	    <item name="android:marqueeRepeatLimit">1</item>
	    <item name="android:textSize">15sp</item>
	    <item name="android:ellipsize">marquee</item>
	</style>
	<style name="Widget.TextView.OrderListTitle" parent="@style/Widget.TextView.CategoryText">
	    <item name="android:text">@string/OrderListTitle</item>
	</style>
	<style name="Widget.TextView.OrderItemCategory" parent="@style/Widget.TextView.CategoryText">
	    <item name="android:textSize">22sp</item>
	    <item name="android:background">@drawable/categoryname</item>
	</style>
	<style name="Widget.TextView.CategoryItemTitle" parent="@style/Widget.TextView">
	    <item name="android:textColor">@drawable/listitem_txtcolor</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textSize">16sp</item>
	</style>
	<style name="Widget.LinearLayout" parent="@style/Widget"/>
	<style name="Widget.LinearLayout.horizontal" parent="@style/Widget.LinearLayout">
	    <item name="android:orientation">horizontal</item>
	</style>
	<style name="Widget.LinearLayout.vertical" parent="@style/Widget.LinearLayout">
	    <item name="android:orientation">vertical</item>
	</style>
	<style name="Widget.LinearLayout.lightgray" parent="@style/Widget.LinearLayout.horizontal">
	    <item name="android:background">@color/lightgray</item>
	    <item name="android:gravity">center_vertical</item>
	</style>
	<style name="Widget.LinearLayout.TagItemLayout" parent="@style/Widget.LinearLayout.horizontal">
	    <item name="android:background">@color/white</item>
	    <item name="android:paddingLeft">10dip</item>
	</style>
	<style name="Widget.LinearLayout.CategoryBack" parent="@style/Widget.LinearLayout.vertical">
	    <item name="android:background">@color/transblack</item>
	</style>
	<style name="Widget.LinearLayout.CategoryListItem" parent="@style/Widget.LinearLayout.vertical">
	    <item name="android:background">@drawable/cat_list_item_bg</item>
	    <item name="android:gravity">center</item>
	</style>
	<style name="Widget.LinearLayout.TabItemLayout" parent="@style/Widget.LinearLayout.vertical">
	    <item name="android:background">@drawable/itemback</item>
	    <item name="android:clipChildren">true</item>
	</style>
	<style name="Widget.LinearLayout.SearchBackLayout" parent="@style/Widget.LinearLayout.horizontal">
	    <item name="android:gravity">center</item>
	    <item name="android:paddingLeft">2dip</item>
	    <item name="android:paddingTop">5dip</item>
	    <item name="android:paddingRight">2dip</item>
	    <item name="android:paddingBottom">5dip</item>
	    <item name="android:background">@drawable/searchlayoutborder</item>
	</style>
	<style name="Widget.LinearLayout.SearchLayout" parent="@style/Widget.LinearLayout.horizontal">
	    <item name="android:background">@drawable/cornerlayout</item>
	    <item name="android:gravity">center</item>
	    <item name="android:paddingLeft">20dip</item>
	    <item name="android:paddingTop">2dip</item>
	    <item name="android:paddingRight">10dip</item>
	    <item name="android:paddingBottom">2dip</item>
	</style>
	<style name="DeskListFrame">
	    <item name="android:background">@color/white</item>
	</style>
	<style name="SearchEdit">
	    <item name="android:background">@color/transparent</item>
	    <item name="android:imeOptions">actionDone</item>
	    <item name="android:singleLine">true</item>
	    <item name="android:paddingLeft">3dip</item>
	    <item name="android:hint">@string/desksearchhint</item>
	</style>
	<style name="Widget.RelativeLayout" parent="@style/Widget"></style>
	<style name="OrderItemLayout" parent="@style/Widget.RelativeLayout">
        <item name="android:padding">5.0dip</item>
        <item name="android:background">@drawable/list_selector_background</item>    
    </style>
	<style name="Widget.RelativeLayout.gray" parent="@style/Widget.RelativeLayout">
		<item name="android:background">@color/gray</item>
	</style>
	<style name="Widget.RelativeLayout.TopBarLayout" parent="@style/Widget.RelativeLayout">
	    <item name="android:padding">3dip</item>
	    <item name="android:background">@drawable/hejititle</item>
	</style>
	<style name="Widget.RelativeLayout.GridItemLayout" parent="@style/Widget.RelativeLayout">
	    <item name="android:paddingBottom">4dip</item>
	</style>
	<style name="Widget.RelativeLayout.DeskListItemLayout" parent="@style/Widget.RelativeLayout">
	    <item name="android:paddingLeft">8dip</item>
	    <item name="android:paddingRight">8dip</item>
	</style>
	<style name="Widget.AbsListView" parent="@style/Widget">
		<item name="android:scrollbars">vertical</item>
		<item name="android:fadingEdge">vertical</item>
		<item name="android:fadingEdgeLength">0.0dip</item>
	</style>
	<style name="Widget.ListView" parent="@style/Widget.AbsListView">
		<item name="android:cacheColorHint">@null</item>
		<item name="android:divider">@drawable/dotted_line</item>
		<item name="android:footerDividersEnabled">false</item>
	</style>
	<style name="Widget.ListView.DeskList" parent="@style/Widget.ListView">
		<item name="android:listSelector">@drawable/list_selector_background</item>
		<item name="android:footerDividersEnabled">true</item>
	</style>
	<style name="Widget.ListView.OrderList" parent="@style/Widget.ListView">
	    <item name="android:divider">@color/white</item>
	    <item name="android:dividerHeight">3dip</item>
	    <item name="android:background">@color/white</item>
	</style>
	<style name="Widget.GridView" parent="@style/Widget">
	    <item name="android:listSelector">@drawable/list_selector_background</item>
	    <item name="android:numColumns">auto_fit</item>
	    <item name="android:verticalSpacing">6.7dip</item>
	    <item name="android:horizontalSpacing">6.7dip</item>
	    <item name="android:columnWidth">80dip</item>
	    <item name="android:stretchMode">columnWidth</item>
	    <item name="android:visibility">gone</item>
	</style>
	<style name="Widget.GridView.OrdersGrid" parent="@style/Widget.GridView">
	    <item name="android:visibility">visible</item>
	    <item name="android:background">@color/white</item>
	</style>
	<style name="Widget.Btn" parent="@style/Widget"/>
	<style name="Widget.Btn.TopBarBtn" parent="@style/Widget.Btn">
	    <item name="android:background">@drawable/dianblack</item>
	    <item name="android:textColor">@color/white</item>
	</style>
	<style name="Widget.Btn.TopRefreshBtn" parent="@style/Widget.Btn.TopBarBtn">
	    <item name="android:text">@string/refreshstring</item>
	</style>
</resources>