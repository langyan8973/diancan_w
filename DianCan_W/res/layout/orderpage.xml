<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent">
    <RelativeLayout android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="47dip"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:background="@drawable/hejititle">
        <TextView android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/deskTitle"/>
        <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="33dip"
		    android:layout_centerInParent="true"
		    android:id="@+id/sumText"/>
        <Button android:layout_width="60dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/dianblack"
            android:text="刷新"
            android:textColor="#FFFFFFFF"
            android:id="@+id/BtnFlash"/>
    </RelativeLayout>
	<ScrollView  
	    android:id="@+id/ScrollView" android:layout_width="fill_parent"  
	    android:layout_height="fill_parent" android:scrollbars="vertical"
	    android:background="#FFFFFFFF"> 
	    <RelativeLayout android:layout_width="fill_parent"
		    android:layout_height="fill_parent">
	        <LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:orientation="vertical"    
			    android:id="@+id/rootLyt" >
				<LinearLayout android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				  
				</LinearLayout>	
					
				<LinearLayout
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:orientation="vertical"    
				    android:id="@+id/rootLayout" >
				</LinearLayout>
				
				<Button android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:id="@+id/overbtn"/>
			</LinearLayout>
	    </RelativeLayout>
	</ScrollView>
</LinearLayout>