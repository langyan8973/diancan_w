<?xml version="1.0" encoding="UTF-8"?>  
<LinearLayout android:orientation="vertical"  
    android:layout_width="fill_parent" android:layout_height="wrap_content" 
    android:background="@drawable/itemback" 
    android:clipChildren="true"
    xmlns:android="http://schemas.android.com/apk/res/android">  
  	<RelativeLayout android:layout_width="fill_parent"
  	    android:layout_height="wrap_content">
  	   <ImageView android:id="@+id/tab_item_imageview"  
        android:layout_width="fill_parent" android:layout_height="40.0dip"  
        android:scaleType="fitCenter" /> 
        <TextView android:id="@+id/txtcount"
            android:layout_width="20dip"
            android:layout_height="15.0dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textColor="#FFFFFFFF"
            android:textSize="10dip"
            android:background="@drawable/txtborder"
            android:gravity="center"
            android:visibility="invisible"/>
  	</RelativeLayout> 
    <TextView android:id="@+id/tab_item_textview"  
        android:layout_width="fill_parent" android:layout_height="wrap_content"  
        android:gravity="center" android:singleLine="true"  
        android:marqueeRepeatLimit="1" android:textSize="15.0sp"  
        android:ellipsize="marquee"
        android:textColor="@drawable/tab_text_color" />  
  
</LinearLayout>