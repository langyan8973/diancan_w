<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <RelativeLayout android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="47dip"
        android:layout_alignParentTop="true"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:background="@drawable/hejititle">
        <TextView android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/deskTitle"/>
        <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="33dip"
		    android:layout_centerInParent="true"
		    android:id="@+id/sumText"/>
        <Button android:layout_width="60dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/dianblack"
            android:text="刷新"
            android:textColor="#FFFFFFFF"
            android:id="@+id/BtnFlash"/>
    </RelativeLayout>
    <ListView android:id="@+id/orderList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/topbar"
        android:layout_above="@+id/bottombar"
        android:divider="#FFFFFFFF"
        android:dividerHeight="4dip"
        android:listSelector="#FFFFFFFF"
        android:cacheColorHint="#00000000"
        android:background="#FFFFFFFF"></ListView>
    <LinearLayout android:id="@+id/bottombar" 
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="#FFCCCCCC"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button android:id="@+id/overBtn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="结账"/>
        <Button android:id="@+id/cancelBtn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="撤销"/>
    </LinearLayout>
    <ProgressBar android:id="@+id/oprogress"
	      android:layout_width="wrap_content" 
	      android:layout_height="wrap_content"
	      android:layout_centerVertical="true"
	      android:layout_centerInParent="true"
	      style="?android:attr/progressBarStyleLarge">
	</ProgressBar>

</RelativeLayout>