<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:orientation="horizontal" 
    android:gravity="center"
    android:paddingLeft="3dp"
    android:paddingRight="3dp">
    <ImageView android:id="@+id/imgctrl"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"/>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/imgctrl">
        <TextView android:id="@+id/mtitle" 
          	android:layout_width="wrap_content"
          	android:layout_height="wrap_content" 
          	android:textColor="#FF090909"
          	android:textSize="16dp" />
	    <TextView android:id="@+id/mprice"
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:textColor="#FFAAAAAA" 
	    	android:textSize="15dp" />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">
        
        <TextView android:id="@+id/mcount"
	          android:layout_width="40dip"
	          android:layout_height="30dip"
	          android:textColor="#FFFF0000"
	          android:textSize="20dip"
	          android:gravity="center"/> 
		
	    <ImageView android:id="@+id/imgadd" 
		    android:layout_width="30dip"
		    android:layout_height="30dip"  
		    android:layout_margin="3dip"
		    android:src="@drawable/add"/>
    </LinearLayout>    
</RelativeLayout>